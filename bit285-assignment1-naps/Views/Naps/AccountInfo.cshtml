@model bit285assignment1naps.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";

}


<h1>New Account Information</h1>

<fieldset>
    <form asp-action="AccountInfo" method="post">
        <div>
            <label asp-for="firstName">First Name</label>
            <input asp-for="firstName" />
            <span>* required</span>
            <!--<span asp-validation-for="firstName"></span>-->
        </div>

        <div>
            <label asp-for="lastName">Last Name</label>
            <input asp-for="lastName" />
            <span>* required</span>
            <!-- <span asp-validation-for="lastName"></span>-->
        </div>
        <div>
            <label asp-for="email">Email Address</label>
            <input asp-for="email" />
            <span>* required</span>
            <!--<span asp-validation-for="email"></span>-->
        </div>
        <div>
            <label>Program</label>
            <select name="program">
                <option>Web App Dev</option>
                <option>Mobile App Dev</option>
                <option>Front-end Dev</option>
            </select>
            <!--<span asp-validation-for="program"></span>-->
        </div>
        <div asp-validation-summary="All"></div>
        <div>
            <!--<input type="button" onclick="location.href='/password-info.html';" value="Create Password" />-->
            <input type="submit" value="Continue" />
            <input type="button" value="Reset" />
        </div>
    </form>
</fieldset>

